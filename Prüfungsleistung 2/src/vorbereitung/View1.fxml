<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Button?>
<?import javafx.scene.layout.TextField?>
<?import javafx.scene.layout.Labe?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="vorbereitung.Controller">
	<padding>
		<Insets top="50" right="50" bottom="50" left="50" />
	</padding>
	<children>
		<Label fx:id="label1" text="Anfangskapital" GridPane.columnIndex="0"
			GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="2"</Label>		
		<Label fx:id="label2" text="Zinssatz" GridPane.columnIndex="0" 
			GridPane.rowIndex="1" GridPane.columnSpan="2" GridPane.rowSpan="2"</Label>
		<Label fx:id="label3" text="Laufzeit" GridPane.columnIndex="0"
			GridPane.rowIndex="2" GridPane.columnSpan="2" GridPane.rowSpan="2"></Label>
		<Label fx:id="label4" text="Zinsen" GridPane.columnIndex="0"
			GridPane.rowIndex="3" GridPane.columnSpan="2" GridPane.rowSpan="2"></Label>
		<Label fx:id="resLabel" GridPane.columnIndex="1"
			GridPane.rowIndex="3" GridPane.columnSpan="2" GridPane.rowSpan="2"></Label>
		<TextField fx:id="input1" GridPane.columnIndex="1"
			GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="2"></TextField>
		<TextField fx:id="input2" GridPane.columnIndex="1"
			GridPane.rowIndex="1" GridPane.columnSpan="2" GridPane.rowSpan="2"></TextField>
		<TextField fx:id="input3" GridPane.columnIndex="1"
			GridPane.rowIndex="2" GridPane.columnSpan="2" GridPane.rowSpan="2"></TextField>
		<Button fx:id="calcButton" GridPane.columnIndex="1"
			GridPane.rowIndex="4" GridPane.columnSpan="4" GridPane.rowSpan="4"
			text="Zinsen berechen" textAlignment="center" onAction="#calculate"></Button>
	</children>
</GridPane>

